{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
